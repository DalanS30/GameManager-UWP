<RS4Api:Page
    x:Class="GameManager_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:RS4Api="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GameManager_UWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <RS4Api:NavigationView x:ConnectionId='2'
        x:Name="navigationView"
        HorizontalAlignment="Stretch"
        RS4Api:IsBackButtonVisible="Collapsed"
        RS4Api:IsBackEnabled="{Binding ElementName=enableCheck, Path=IsChecked}"
        RS4Api:PaneTitle="{Binding ElementName=paneText, Path=Text}"
        Header="Necromantia: Risen"
        IsSettingsVisible="False"
        IsTabStop="False"
                                                          >
        <RS4Api:NavigationView.MenuItems>
            <RS4Api:NavigationViewItem x:ConnectionId='3'
                Name="Choice1NavItem"
                Content="Choice 1"
                Tag="1">
                <RS4Api:NavigationViewItem.Icon>
                    <RS4Api:FontIcon Glyph="&#xF146;" />
                </RS4Api:NavigationViewItem.Icon>
            </RS4Api:NavigationViewItem>
            <RS4Api:NavigationViewItem x:ConnectionId='4'
                Name="Choice2NavItem"
                Content="Choice 2"
                Tag="2">
                <RS4Api:NavigationViewItem.Icon>
                    <RS4Api:FontIcon Glyph="&#xF147;" />
                </RS4Api:NavigationViewItem.Icon>
            </RS4Api:NavigationViewItem>
            <RS4Api:NavigationViewItem x:ConnectionId='5'
                Name="Choice3NavItem"
                Content="Choice 3"
                Tag="3">
                <RS4Api:NavigationViewItem.Icon>
                    <RS4Api:FontIcon Glyph="&#xF148;" />
                </RS4Api:NavigationViewItem.Icon>
            </RS4Api:NavigationViewItem>
            <RS4Api:NavigationViewItem x:ConnectionId='6'
                Name="Choice4NavItem"
                Content="Choice 4"
                Tag="4">
                <RS4Api:NavigationViewItem.Icon>
                    <RS4Api:FontIcon Glyph="&#xF149;" />
                </RS4Api:NavigationViewItem.Icon>
            </RS4Api:NavigationViewItem>
            <RS4Api:NavigationViewItem x:ConnectionId='7'
                Name="Choice5NavItem"
                Content="Choice 5"
                Tag="5">
                <RS4Api:NavigationViewItem.Icon>
                    <RS4Api:FontIcon Glyph="&#xF14A;" />
                </RS4Api:NavigationViewItem.Icon>
            </RS4Api:NavigationViewItem>
            <RS4Api:NavigationViewItem x:ConnectionId='8'
                Name="Choice6NavItem"
                Content="Choice 6"
                Tag="6">
                <RS4Api:NavigationViewItem.Icon>
                    <RS4Api:FontIcon Glyph="&#xF14B;" />
                </RS4Api:NavigationViewItem.Icon>
            </RS4Api:NavigationViewItem>
            <RS4Api:NavigationViewItem x:ConnectionId='9'
                Name="Choice7NavItem"
                Content="Choice 7"
                Tag="7">
                <RS4Api:NavigationViewItem.Icon>
                    <RS4Api:FontIcon Glyph="&#xF14C;" />
                </RS4Api:NavigationViewItem.Icon>
            </RS4Api:NavigationViewItem>
            <RS4Api:NavigationViewItem x:ConnectionId='10'
                Name="Choice8NavItem"
                Content="Choice 8"
                Tag="8">
                <RS4Api:NavigationViewItem.Icon>
                    <RS4Api:FontIcon Glyph="&#xF14D;" />
                </RS4Api:NavigationViewItem.Icon>
            </RS4Api:NavigationViewItem>
            <RS4Api:NavigationViewItem x:ConnectionId='11'
                Name="Choice9NavItem"
                Content="Choice 9"
                Tag="9">
                <RS4Api:NavigationViewItem.Icon>
                    <RS4Api:FontIcon Glyph="&#xF14E;" />
                </RS4Api:NavigationViewItem.Icon>
            </RS4Api:NavigationViewItem>
            <RS4Api:NavigationViewItem x:ConnectionId='12'
                Name="Choice10NavItem"
                Content="Choice 10"
                Tag="10">
                <RS4Api:NavigationViewItem.Icon>
                    <RS4Api:FontIcon Glyph="&#xF14F;" />
                </RS4Api:NavigationViewItem.Icon>
            </RS4Api:NavigationViewItem>
        </RS4Api:NavigationView.MenuItems>
        <RS4Api:Frame x:ConnectionId='13' x:Name="contentFrame" Margin="20,0,20,20">
            <RS4Api:ScrollViewer>
                <RS4Api:TextBlock x:ConnectionId='14' Name="GameContentTextBlock" TextWrapping="WrapWholeWords" />
            </RS4Api:ScrollViewer>
        </RS4Api:Frame>
    </RS4Api:NavigationView>
</RS4Api:Page>

